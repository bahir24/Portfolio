include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        .start-section
          section.hero
            .container.hero__container
              header.header
                .logo МБ
                .header__menu
                  nav.nav
                    ul.nav__list
                      - 
                        var items= [ 
                          {
                              name: 'Главная',
                              link: 'https://first'
                          },{
                              name: 'Обо мне',
                              link: 'https://second'
                          },{
                              name: 'Навыки',
                              link: 'https://third'
                          },{
                              name: 'Работы',
                              link: 'https://forth'
                          },{
                              name: 'Отзывы',
                              link: 'https://fifth'
                          },{
                              name: 'Связаться',
                              link: 'https://sixth'
                          } 
                        ]
                      each item in items                       
                        li.nav__item
                          a(href=`${item.link}`).nav__link #{item.name}
                .socials
                  ul.socials__list
                    - 
                      var socials= [ 
                        {
                            name: 'vk',
                            link: 'https://vk'
                        },{
                            name: 'insta',
                            link: 'https://inst'
                        },{
                            name: 'github',
                            link: 'https://github'
                        }
                      ]
                    each social in socials
                      li.socials__item
                        a(href=`${social.link}`).socials__link 
                          +icon(`${social.name}`, 'socials__icon')
              .hero__content
                .owner
                  .owner__desc 
                    | Личный сайт
                    br
                    | веб-разработчика
                  .owner__name 
                    | Михаил 
                    br
                    | Бахирев

              .hero__bottom-buttons
                .scroll-down-btn Скролл
          section.about 
            .about__left
              .dev
                .dev__avatar
                  img(src="#" alt="").dev__avatar-pic
                .dev__description
                  table.dev__description-table
                    - 
                      var decsription= [
                        {
                            tdl: 'Проживаю',
                            td2: 'Санкт-Петербург'
                        },{
                            tdl: 'Возраст',
                            td2: '30 лет'
                        },{
                            tdl: 'Родился',
                            td2: '24 февраля 1989'
                        }
                      ]
                    each row in decsription
                        tr.dev__description-row
                          td.dev__description-cell #{row.tdl}
                          td.dev__description-cell #{row.td2}
            .about__right
              .about