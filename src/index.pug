include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        .start-section
          section.hero
            .container.hero__container
              header.header
                .logo МБ
                .header__menu
                  nav.nav
                    ul.nav__list
                      - 
                        var items= [ 
                          {
                              name: 'Главная',
                              link: 'https://first'
                          },{
                              name: 'Обо мне',
                              link: 'https://second'
                          },{
                              name: 'Навыки',
                              link: 'https://third'
                          },{
                              name: 'Работы',
                              link: 'https://forth'
                          },{
                              name: 'Отзывы',
                              link: 'https://fifth'
                          },{
                              name: 'Связаться',
                              link: 'https://sixth'
                          } 
                        ]
                      each item in items                       
                        li.nav__item
                          a(href=`${item.link}`).nav__link #{item.name}
                .socials
                  ul.socials__list
                    - 
                      var socials= [ 
                        {
                            name: 'vk',
                            link: 'https://vk'
                        },{
                            name: 'insta',
                            link: 'https://inst'
                        },{
                            name: 'github',
                            link: 'https://github'
                        }
                      ]
                    each social in socials
                      li.socials__item
                        a(href=`${social.link}`).socials__link 
                          +icon(`${social.name}`, 'socials__icon')
              .hero__content
                .owner
                  .owner__desc Личный сайт веб-разработчика
                  .owner__name Михаил Бахирев
              .hero__bottom-buttons
                .scroll-down-btn Скролл